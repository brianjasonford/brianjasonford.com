---
pagination:
  data: collections
  size: 1
  alias: tag
  filter: (tag) => !["all", "posts"].includes(tag)
permalink: "tags/{{ tag | slug }}/index.html"
eleventyComputed:
  title: "Posts tagged with {{ tag }}"
layout: /layouts/page
---

<ul>
  {% for post in collections[tag] | reverse %}
    <li><a href="{{ post.url }}">{{ post.data.title }}</a> â€“ {{ post.data.date | postDate }}</li>
  {% endfor %}
</ul>